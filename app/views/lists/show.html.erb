<h1 class="col-xs-1" align="center">Movies</h1>
<div class="row cards-movie col-xs-1" align="center">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="col-6-sm">
          <div class="card-movie">
          <div class="card-poster shadow p-3 mb-5 bg-body-tertiary rounded">
              <%= image_tag bookmark.movie.poster_url, alt: "movie poster" %>
          </div>
          <div class="card-description">
            <div class="card-title">
              <h5><%= bookmark.movie.title %></h5>
              <p> <%= bookmark.movie.rating %> </p>
            </div>
            <div class="card-overview">
              <p> <%= bookmark.movie.overview %> </p>
            </div>
            <hr>
              <p><strong>Review</strong></p>
            <div class="card-review">
              <p><%= bookmark.comment %></p>
            <%= link_to "Delete", bookmark_path(bookmark),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},class:"btn btn-danger"%></div>
          </div>
        </div>
      </div>
      <% end %>
      <%= link_to "Add a new bookmark ðŸ“–", new_list_bookmark_path(@list), class:"btn btn-success" %>
